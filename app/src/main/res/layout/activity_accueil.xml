<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccueilActivity"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/storeicon" />

    <ImageView
        android:id="@+id/bluetooth_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/welcome_txt"
        android:layout_alignRight="@+id/welcome_txt"
        android:layout_alignTop="@+id/store_icon"
        android:src="@drawable/bluetooth" />

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/store_icon"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:src="@drawable/settingicon" />

    <ImageView
        android:id="@+id/power_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/store_icon"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/power_button" />

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="Welcome !"
        android:textColor="#fff"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/welcome_txt"
        android:layout_marginStart="123dp"
        android:layout_marginLeft="123dp"
        android:text="Balance : 0.00 â‚¬"
        android:textColor="#fff"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/purchase_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/store_icon"
        android:layout_alignLeft="@+id/store_icon"
        android:layout_marginTop="159dp"
        android:textSize="13dp"
        android:textColor="#fff"
        android:text="Previous purchase records:" />

    <ListView
        android:id="@+id/list_purchase"
        android:layout_width="328dp"
        android:layout_height="377dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

    <ListView
        android:id="@+id/device_listview"
        android:layout_width="97dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/bluetooth_icon"
        android:layout_toLeftOf="@+id/bluetooth_icon"/>

</RelativeLayout>